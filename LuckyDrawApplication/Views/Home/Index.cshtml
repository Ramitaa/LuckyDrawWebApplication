<style>
    .select2-container .select2-selection--single {
        height: 36px !important;
    }

    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        background-color: #3c8dbc !important;
        border-color: #367fa9 !important;
    }
</style>

@{
    ViewBag.Title = "Create New Payment";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://adminlte.io/themes/AdminLTE/bower_components/select2/dist/css/select2.min.css" rel="stylesheet" />

<!-- Site wrapper -->
<div class="wrapper">

    @Html.Partial("_SalesConsultantLayout")

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>Create New Payment</h1>
            <ol class="breadcrumb">
                <li><a href="~/AMS/Admin/Home"><i class="fa fa-dashboard"></i>Dashboard</a></li>
                <li>Payment</li>
                <li class="active">Create New Payment</li>
            </ol>

        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="box box-success">

                <div id="error_message_box" class="callout callout-danger" style="visibility:hidden; padding:5px;">
                    <h4>An error has occured!</h4>

                    <p id="error"></p>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <div class="box-header">
                            <div class="col-sm-12" id="results_label">
                                <p id="result" style="text-align:center;"></p>
                            </div>
                        </div>

                        <div class="box-body">



                        </div>
                    </div>
                }
            </div>

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    @Html.Partial("_Footer")

</div>

<script src="~/admin-lte/js/adminlte.min.js"></script>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dashboard').addClass("active");
    });
</script>